        </ul>
    </div>
</nav>

{% for label, message in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in message %}
                {{ message | raw }}
            {% endfor %}
        </div>
    </div>
{% endfor %}

{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}

</body>

</html>
