{% extends 'base.html.twig' %}

{% block title %}Infos du Lycée{% endblock %}

{% block body %}

    <div class="container mt-5">
        {% if publications %}
            <div class="decalage row">
                <div class="col-9">
                    <h1 class="mb-5 "><strong>Informations du lycée</strong></h1>
                </div>

            </div>
            <div>
                {% for publication in publications  %}
                        <div class="card bg-light mb-5">
                            <div class="card-header">
                                <h4>{{ publication.subject }}</h4>
                            </div>
                            <div class="card-body">
                                {% if publication.image %}
                                <img src="/pictures/annonces/{{ publication.image }}" alt="" style="height: 250px;">
                                {% endif %}
                                <p class="card-body">
                                    {{ publication.text|raw }}
                                </p>
                                {% if publication.brochureFilename %}
                                <a class="text-success" href="{{ asset('uploads/brochures/' ~ publication.brochureFilename) }}">Voir le document joint (PDF)</a>
                                {% endif %}
                            </div>
                        </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="decalage"></div>
            <h1 class="text-dark"><strong>Il n'y a pas d'information pour l'instant !!!</strong></h1>
        {% endif %}
    </div>

{% endblock %}